{% extends 'base.html.twig' %}

{% block body %}
<div>
	<h1>Connexion</h1><br><br>
	{% if error %}
            <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                Vos identifiants ne sont pas reconnus</div>

        {% endif %}
	<center>
		<form action="{{path('security_login')}}" method="post" style="width: 40%; height: auto;">
		<div class="form-group">
			<input placeholder="Pseudo..." required name="_username"
			type="text" class="form-control">
 		</div>
		<div class="form-group">
			<input placeholder="Mot de passe..." required name="_password"
			type="password" class="form-control">
 		</div>
 		<div>
			<input type="checkbox" id="remember_me" name="_remember_me" checked/>
			<label for="remember_me">Se souvenir de moi</label>
		</div>
		<div class="form-group">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}">
			<button type="submit" class="btn btn-success">Connexion !</button>
 		</div>
	</form>
	</center>
	

	<form action="{{ path('oubli') }}" method="post">
		<button type="submit" id="forgotten_mdp" name="forgotten_mdp" class="btn btn-dark" style="float: right" />Mot de passe oubli√© ?</button>
	</form>
</div><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
	
	
