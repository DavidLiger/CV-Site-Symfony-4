{% extends 'categoryBase.html.twig' %}


{% block background %}
<div class="container-fluid" style="background: repeat; margin-top: 0px" >
            <img src="uploads/image/{{ categorie.imageName }}" width="50%" style="display: block;
    margin: 0 auto;"></img>
        </div>
{% endblock %}

{% block navname %}
<div style="float: left;">
              <a class="navbar-brand" style="position: relative;margin-left: 1px;">{{ categorie.nom }}</a>
                </div>
{% endblock %}

{% block body %}
<div style="float: left;">
            <a href="{{path('home')}}" style="color: #000000">Accueil</a><span> > </span><a href="{{path('downloads')}}" style="color: #000000">{{ categorie.nom }}</a>
</div>
<br><br>

<section class="articles">

    {% for article in articles %}
    <article style="border: solid;">
        <h2>{{article.titre}}</h2>
        <div class="content-fluid">
            <a href="{{path('download_show',{'id':article.id})}}"><img style="width: 35%; height: auto;" src="/uploads/image/{{ article.imageName }}" alt="{{ article.imageName }}" width="120"></a>
        </div>
        <br>
        <div class="content-fluid">
            {{article.description | raw}}
            <a href="{{path('download_show',{'id':article.id})}}" class="btn btn-primary">Téléchargez</a>
        </div>
        <br>
    </article>
    <br>
    {% endfor %}
    
    

</section>

{% endblock %}

